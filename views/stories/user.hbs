<div class="col">
  <div class="card center-align">
    <div class="card-content">
      <span class="card-title">{{userObj.displayName}}</span>
      <img src="{{userObj.image}}" class="circle responsive-img img-small">
    </div>
    <div class="card-action">
      <a href="/stories/user/{{userObj._id}}">More From {{userObj.firstName}}</a>
    </div>
  </div>
  <h1>Stories</h1>
  <div class="row">
    {{#each stories}}
    <div class="col s12 m4">
      <div class="card">
        <div class="card-image">
          {{{editIcon ../userObj._id ../user _id}}}
        </div>
        <div class="card-content center-align">
          <h5>{{title}}</h5>
          <p>{{{stripTags (truncate body 200)}}}</p>
        </div>
        <div class="card-action center-align">
          <a style="font-size: 12px;" class="btn grey" href="/stories/{{_id}}">Read More...</a>
        </div>
      </div>
    </div>
    {{else}}
    <p>No Stories To Display</p>
    {{/each}}
  </div>
</div>